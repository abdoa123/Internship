                        .PageSizes(true)
                        .ButtonCount(5))
                    .DataSource(dataSource => dataSource
                        .Ajax()
                        .Model(model =>
                        {
                            model.Id(doc => doc.docId);
                            model.Field(doc => doc.docId).Editable(false);
                        })
                        .Read(read => read.Action("getData", "Attachments"))
                        .PageSize(5)
                    )
                        )
